temp = float(input("Enter the temperature: "))
unit = input("Is this in Celsius or Fahrenheit? (C/F): ").upper()

if unit == "C":
    f = (temp * 9/5) + 32
    print(f"{temp}째C is equal to {round(f, 2)}째F")
elif unit == "F":
    c = (temp - 32) * 5/9
    print(f"{temp}째F is equal to {round(c, 2)}째C")
else:
    print(f"Invalid unit '{unit}'. Please enter 'C' or 'F'.")
