rows = int(input("Please enter the number of rows (half height): "))
symbol = input("Please enter the symbol to use: ")

# Top half
for i in range(rows):
    spaces = rows - i - 1
    symbols = 2 * i + 1
    print(" " * spaces + symbol * symbols)

# Bottom half
for i in range(rows - 2, -1, -1):
    spaces = rows - i - 1
    symbols = 2 * i + 1
    print(" " * spaces + symbol * symbols)
